<ol>
	<% activity = find_comments(activity_id)%>
	
	<% if activity.comments.empty? %>
		<p>Be the first to comment.</p>
	<% else %>
		<% activity.comments.each do |comment| %>
			<li>
				<a href="<%= user_path(comment.user) %>"><%= image_tag comment.user.avatar.url(:thumb) %></a>
				<p><%= link_to "#{comment.user.name}", user_path(comment.user) %><%= comment.comment %></p>
				<span><%= distance_of_time_in_words(Time.now, comment.created_at) %> ago </span>
			</li>
		<% end %>
	<% end %>
</ol>