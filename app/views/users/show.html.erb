<div class="left-column">
	<h1><%= @user.name %></h1>
	<p><% if logged_in? %><%= render :partial => 'follow_form'%><% end %></p>
	
	<ul>
		<%= link_to "Reviews", reviews_user_path(@user) %>
		<%= link_to "Followers"%>
	</ul>
	
	<h2>Recent Activity</h2>
	
	
	
	<div class="activity-feed">	
				
		<ol>
			<% @activities.each do |activity| %>
				<%= show_feed_item(@user, activity.activity_type, activity.target_id) %>
			<% end %>
		</ol>
		
		<%= will_paginate @activities %>
	
	</div>
</div>

<div class="right-column">
	
	<%= render :partial => 'following_list', :locals => { :user => @user } %>
	
</div>
