<h1><%= @user.name %></h1>

<h2><%= @user.name %> Follows</h2>

<ul>
<% for relationship in @user.relationships %>
	<li>
		<%=h link_to "#{relationship.relation.name}", relationship.relation %> (@<%= relationship.relation.login %>)
		<% if current_user.id == @user.id %>
			<%= link_to "remove", relationship, :method => :delete %>
		<% end %>
	</li>
<% end %>
</ul>